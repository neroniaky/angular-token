{
    "compilerOptions": {
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "ES5",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "declaration": true,
        "outDir": "lib",
        "suppressImplicitAnyIndexErrors": true
    },
    "dirs": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "angular2-token.d.ts"
    ],
    "types": [
        "core-js",
        "hammerjs",
        "jasmine",
        "node",
        "protractor",
        "source-map",
        "webpack"
    ]
}
