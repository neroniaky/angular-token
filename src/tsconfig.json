{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",

        "declaration": true,
        "sourceMap": true,

        "outDir": "../lib",

        "lib": [
            "dom",
            "es2015"
        ],
        "types": [
            "hammerjs",
            "jasmine",
            "node",
            "selenium-webdriver",
            "source-map",
            "uglify-js",
            "webpack"
        ]
    },
    "exclude": [
        "node_modules",
        "lib",
        "**/*.spec.ts"
    ],
    "angularCompilerOptions": {
        "genDir": "../lib"
    }
}
